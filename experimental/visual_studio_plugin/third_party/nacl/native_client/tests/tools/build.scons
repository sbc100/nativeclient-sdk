Import('env')

# Currently, this test only makes sense for non-Windows, since SIGPIPE
# does not make sense in Windows.
if env.Bit('windows'):
  Return()

# NOTE: This acutally works on arm but the signal does not make it through the
#       emulator. This code could be rewritten to catch the signal internally
TEST_SUITES = ['small_tests']
if env['TARGET_ARCHITECTURE'] == 'arm':
  TEST_SUITES = ['small_tests_arm_hw_only']

sigpipe_tool_test_exe = env.ComponentProgram('sigpipe_tool_test',
                                             ['sigpipe_tool_test.c'])
node = env.CommandTest(
    'sigpipe_tool_test.out',
    [sigpipe_tool_test_exe],
    exit_status='-13')
env.AddNodeToTestSuite(node, TEST_SUITES, 'run_tool_tests')
